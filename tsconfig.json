{
    "compilerOptions": {
        "outDir": "dist",
        "sourceMap": true,
        "strict": true,
        "module": "commonjs",
        "target": "es6",
        "noImplicitAny": false,
        "experimentalDecorators": true,
        "allowSyntheticDefaultImports": true,
        "lib": [
            "es2015.promise",
            "es6"
        ]
    },
    "include": [
        "./src/**/*",
        "./test/**/*"
    ],
    "exclude": [
        "node_modules"
    ]
}